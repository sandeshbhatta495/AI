   "source": [
    "import random\n",
    "from collections import Counter\n",
    "\n",
    "# Gini impurity\n",
    "def gini(y):\n",
    "    counts = Counter(y)\n",
    "    impurity = 1\n",
    "    for c in counts.values():\n",
    "        p = c / len(y)\n",
    "        impurity -= p ** 2\n",
    "    return impurity\n"
   ]
